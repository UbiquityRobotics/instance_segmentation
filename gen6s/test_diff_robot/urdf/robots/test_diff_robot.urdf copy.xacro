<?xml version="1.0"?>
    <robot xmlns:xacro="http://wiki.ros.org/xacro">
    <!-- <xacro:property name="pi" value="3.141592653589793" /> -->
        <xacro:include filename="inertial_macros.xacro"/>
        <!-- <xacro:include filename="camera.xacro"/>  -->
        <!-- Include camera.xacro -->

        <!-- Colors -->
        <material name="blue">
            <color rgba="0.0 0.0 1.0 1.0"/> <!-- RGBA for blue -->
        </material>
        <material name="black">
            <color rgba="0.0 0.0 0.0 1.0"/> <!-- RGBA for black -->
        </material>
        <material name="gray">
            <color rgba="0.5 0.5 0.5 1.0"/> <!-- RGBA for gray -->
        </material>


        <!-- Base Link -->
        <!-- <link name="base_link">
            <visual>
                <origin xyz="0 0 0.075" rpy="0 0 0"/>
                <geometry>
                    <box size="0.5 0.3 0.1"/>
                </geometry>
                <material name="blue"/>
            </visual>
            <inertial>
                <mass value="5.0"/>
                <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </inertial>
        </link> -->

        <link name="base_link">

        </link>
        
        <!-- CHASSIS LINK -->

        <link name="chassis">
            <visual>
                <origin xyz="0 0 0.075" rpy="0 0 0"/>
                <geometry>
                    <box size="0.5 0.3 0.1"/>
                </geometry>
                <material name="blue"/>
            </visual>
            <collision>
                <origin xyz="0 0 0.075" rpy="0 0 0"/>
                <geometry>
                    <box size="0.5 0.3 0.1"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="5.0"/>
                <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </inertial>
        </link>

        <!-- Left Wheel -->
        <link name="left_wheel">
            <visual>
                <geometry>
                    <cylinder radius="0.05" length="0.02"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.05" length="0.02"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="0.5"/>
                <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </inertial>
            <!-- <xacro:inertial_cylinder mass="0.5" length="0.02" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder> -->
        </link>

        <!-- Right Wheel -->
        <link name="right_wheel">
            <visual>
                <geometry>
                    <cylinder radius="0.05" length="0.02"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.05" length="0.02"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="0.5"/>
                <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </inertial>
            <!-- <xacro:inertial_cylinder mass="0.5" length="0.02" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder> -->
        </link>

        <!-- Caster Wheel -->
        <link name="caster_wheel">
            <visual>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
                <material name="gray"/>
            </visual> 
            <!-- add inertial for caster wheel -->
            <inertial>
                <mass value="0.5"/>
                <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.002"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </inertial>
        </link>

        <!-- Joints -->
        <joint name="chassis_joint" type="fixed">
            <parent link="base_link"/>
            <child link="chassis"/>
            <origin xyz="-0.1 0 0"/> <!-- Offset in x direction-->
        </joint>
        <joint name="left_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="left_wheel"/>
            <origin xyz="-0.2 0.15 0.05" rpy="1.57 0 0"/> 
            <!-- in controls we will use this y x 2 as the separation i.e 0.3-->
            <axis xyz="0 1 0"/>
        </joint>

        <joint name="right_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="right_wheel"/>
            <origin xyz="-0.2 -0.15 0.05" rpy="1.57 0 0"/>
            <axis xyz="0 1 0"/>
        </joint>

        <joint name="caster_wheel_joint" type="fixed">
            <parent link="base_link"/>
            <child link="caster_wheel"/>
            <origin xyz="0.2 0 0.05"/>
            <axis xyz="0 1 0"/>
        </joint>

        <!-- Gazebo reference: -->
        <!-- <gazebo reference="right_wheel">
            <material>Gazebo/Blue</material>
        </gazebo>

        <gazebo reference="left_wheel">
            <material>Gazebo/Blue</material>
        </gazebo> -->

        <gazebo reference="caster_wheel">
            <material>Gazebo/Gray</material>
        </gazebo>


    </robot>

